<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo_gradiente">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="428dp"
        android:layout_height="510dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:weightSum="25"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="6">

                <TextView
                    android:id="@+id/numbers"
                    android:layout_width="470dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:paddingTop="20dp"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="30sp"
                    tools:ignore="RtlCompat,RtlHardcoded" />

                <TextView
                    android:id="@+id/result"
                    android:layout_width="470dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:paddingTop="20dp"
                    android:text="@string/cero"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="30sp"
                    tools:ignore="RtlCompat,RtlHardcoded" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="22"
            android:orientation="vertical"
            android:weightSum="40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="9"
                android:orientation="vertical"
                android:weightSum="5"
                tools:ignore="NestedWeights">

                <Button
                    android:id="@+id/btDel"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="2"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickClear"
                    android:text="@string/clear"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="8"
                android:orientation="vertical"
                android:weightSum="4">

                <Button
                    android:id="@+id/bt7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickSiete"
                    android:text="@string/siete"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bt8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickOCho"
                    android:text="@string/ocho"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bt9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickNueve"
                    android:text="@string/nueve"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickDivision"
                    android:text="@string/slash"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="6.5"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/bt4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickCuatro"
                    android:text="@string/cuatro"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bt5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickCinco"
                    android:text="@string/cinco"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bt6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickSeis"
                    android:text="@string/seis"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btPro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickProducto"
                    android:text="@string/multiplicar"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="7.2"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickUno"
                    android:text="@string/uno"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickDos"
                    android:text="@string/dos"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bt3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickTres"
                    android:text="@string/tres"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btRes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickResta"
                    android:paddingTop="0dp"
                    android:paddingBottom="15dp"
                    android:text="@string/resta"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btpunto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:text="@string/dot"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bt0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickCero"
                    android:text="@string/zero"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btEqu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickIgual"
                    android:text="@string/equals"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btSum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rosa_claro"
                    android:onClick="clickSuma"
                    android:text="@string/plus"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="378dp"
        android:layout_height="146dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:weightSum="25"
        tools:layout_editor_absoluteX="406dp"
        tools:layout_editor_absoluteY="258dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="374dp"
                android:layout_height="match_parent"
                android:text="@string/mostrar_opciones_deshabilitar"
                android:textColor="@color/rosa_claro"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/suma"
                android:textColor="@color/rosa_claro"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/resta2"
                android:textColor="@color/rosa_claro"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/multiplaci_n"
                android:textColor="@color/rosa_claro"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/divisi_n"
                android:textColor="@color/rosa_claro"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>